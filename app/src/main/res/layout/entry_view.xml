<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/entryName"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deleteButton"
        android:id="@+id/editButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editButton"
        android:layout_alignStart="@+id/editButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/entryName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">


        <TextView
            android:text="Date: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryDate"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.04" />

        <TextView
            android:text="Neck: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryNeck"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.04" />

        <TextView
            android:text="Bust: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryBust"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.04" />

        <TextView
            android:text="Chest:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryChest"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.04" />

        <TextView
            android:text="Waist: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryWaist"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.03" />

        <TextView
            android:text="Hip:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryHip"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.06" />

        <TextView
            android:text="Inseam: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryInseam"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.05" />

        <TextView
            android:text="Comment:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entryComment"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.06" />

    </LinearLayout>

</RelativeLayout>